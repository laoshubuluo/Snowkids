<resources>
    <!--长宽-->
    <style name="wh_mm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--长宽-->
    <style name="wh_ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--根布局中的listview-->
    <style name="listview_in_root_layout" parent="wh_mm">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:divider">@color/gray_ad</item>
        <item name="android:dividerHeight">0.2dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!--button样式-->
    <style name="button_white">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@mipmap/button_bg_white</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <!--button样式-->
    <style name="button_blue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@mipmap/button_bg_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--textview样式-->
    <style name="textview_white">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@mipmap/textview_bg_white</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:ems">10</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/gray_ad</item>
    </style>

    <!--textview样式-->
    <style name="textview_white_no_margin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@mipmap/textview_bg_white</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:ems">10</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/gray_ad</item>
    </style>

    <style name="promptDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

